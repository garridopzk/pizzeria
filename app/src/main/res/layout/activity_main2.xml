<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="-9dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/menu2"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingContraints">
    </LinearLayout>

    <Button
        android:id="@+id/pizzas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="250dp"
        android:text="pizzas"
        android:textColor="@color/design_default_color_on_primary" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="120dp"
        android:background="@drawable/pizza" />

    <Button
        android:id="@+id/Refrescos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginTop="450dp"
        android:text="Refrescos"
        android:textColor="@color/design_default_color_on_primary" />

    <ImageView
        android:id="@+id/refresco"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="500dp"
        android:layout_marginStart="120dp"
        android:background="@drawable/refrescos" />



</RelativeLayout>